<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profil">



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-140dp"

            android:background="@drawable/bg_login" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profil_photo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="130dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="70dp"
            android:src="@drawable/no_pict"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />

        <TextView
            android:id="@+id/nama_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="470dp"
            android:textAllCaps="true"
            android:textSize="20dp"
            android:fontFamily="@font/osregular"
            android:text="--- Hallo ---" />


    <EditText
        android:id="@+id/et_nama"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_marginStart="40dp"
        android:hint="Nama "
        android:inputType="text" />

    <EditText
        android:id="@+id/et_kelamin"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="360dp"
        android:layout_marginStart="40dp"
        android:hint="Kelamin "
        android:inputType="text" />

    <EditText
        android:id="@+id/et_umur"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="420dp"
        android:layout_marginStart="40dp"
        android:hint="Usia "
        android:inputType="text" />

    <EditText
        android:id="@+id/et_tanggalLahir"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="480dp"
        android:layout_marginStart="40dp"
        android:hint="Tanggal Lahir "
        android:inputType="text" />


    <ImageView
        android:id="@+id/upload"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="155dp"
        android:layout_marginStart="235dp"
        android:background="@drawable/camera_button" />


        <Button
            android:id="@+id/update_Profil"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="350dp"


            android:layout_marginStart="100dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_blue_border"
            android:fontFamily="@font/osregular"
            android:text="UPDATE PROFIL"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"
            android:textColor="#0984E3"

            />











</RelativeLayout>

